<!DOCTYPE html>
<html>
  <head>
    <title>Control Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        min-height: 100vh;
        font-family: "Segoe UI", sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }

      .control-card {
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        padding: 2rem;
      }

      .btn-primary {
        background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        font-weight: bold;
      }

      .btn-primary:hover {
        background: linear-gradient(90deg, #00f2fe 0%, #4facfe 100%);
      }

      h2 {
        color: #333;
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <div class="control-card">
      <h2 class="mb-4 text-center">⚙️ Control Panel</h2>

      <form method="POST" action="/update-theme">
        <label>Primary Color</label>
        <input
          type="color"
          name="PRIMARY_COLOR"
          class="form-control mb-2"
          required
        />

        <label>Secondary Color</label>
        <input
          type="color"
          name="SECONDARY_COLOR"
          class="form-control mb-2"
          required
        />

        <label>Background Gradient</label>
        <input
          type="color"
          name="BACKGROUND_GRADIENT"
          class="form-control mb-2"
          required
        />

        <label>Font Family</label>
        <input
          type="text"
          name="FONT_FAMILY"
          value="'Segoe UI', sans-serif"
          class="form-control mb-2"
        />

        <label>Border Radius</label>
        <input
          type="text"
          name="BORDER_RADIUS"
          value="15px"
          class="form-control mb-2"
        />

        <label>Box Shadow</label>
        <input
          type="text"
          name="BOX_SHADOW"
          value="0 8px 20px rgba(0, 0, 0, 0.1)"
          class="form-control mb-2"
        />
        <button type="submit" class="btn btn-primary">Save Theme</button>
      </form>

      <form method="POST" action="/run-script">
        <div class="mb-3">
          <label class="form-label">Python script to run:</label>
          <input
            type="text"
            name="script"
            class="form-control"
            placeholder="e.g. gemini_script.py"
            required
          />
        </div>
        <div class="d-grid">
          <button class="btn btn-primary">Run Script</button>
        </div>
      </form>
    </div>
  </body>
</html>
